{
  "name": "docs",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS=\"--max-old-space-size=8192\" vocs build --searchIndex false && vocs search-index",
    "check": "biome check . --write --unsafe",
    "check:types": "tsc --noEmit",
    "dev": "vocs dev",
    "gen:specs": "node scripts/gen:specs.ts",
    "prepare": "simple-git-hooks",
    "preview": "vocs preview"
  },
  "dependencies": {
    "react": "latest",
    "react-dom": "latest",
    "react-router": "7.9.4",
    "tailwindcss": "^4.1.14",
    "tempo.ts": "~0.1.0",
    "viem": "^2.38.3",
    "vocs": "latest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@types/node": "latest",
    "@types/react": "latest",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.6.4",
  "simple-git-hooks": {
    "pre-commit": "pnpm check && (git diff --cached --name-only | grep -q '^specs/' && pnpm gen:specs || true)"
  }
}
