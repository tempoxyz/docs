{
  "name": "docs",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS=\"--max-old-space-size=16384\" vocs build --searchIndex false && vocs search-index",
    "check": "biome check . --write --unsafe",
    "check:types": "tsc --noEmit",
    "dev": "vocs dev",
    "gen:specs": "node scripts/gen:specs.ts",
    "prepare": "simple-git-hooks",
    "preview": "vocs preview"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.5",
    "cva": "1.0.0-beta.4",
    "prool": "^0.0.25",
    "react": "latest",
    "react-dom": "latest",
    "react-router": "7.9.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tempo.ts": "~0.2.0",
    "viem": "^2.38.5",
    "vocs": "latest",
    "wagmi": "^2.19.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@iconify/json": "^2.2.403",
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@types/node": "latest",
    "@types/react": "latest",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-icons": "^22.5.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run check && (git diff --cached --name-only | grep -q '^specs/' && bun run gen:specs || true)"
  }
}
